.container .main-inner
    width: 1100px
.content-wrap
    width: 800px
    min-height: 800px
    border: 1px solid #ddd
.sidebar-inner
    width: 280px
.sidebar
    position: static
    float: left
    margin-top: 300px
    width: 280px
    background: #f5f7f9
    box-shadow: none
    border: 1px solid #ddd
.header
    width: 1100px
.header-inner {
    width: 280px;
    border: 1px solid #ddd
    border-top: none
}
.highlight .line
    height: 22px
.highlight .code pre
    background-color: rgb(249, 248, 247)
pre, .highlight
    overflow: auto
    margin: 20px 0
    padding: 10px
    font-size: 15px
    color: #4d4d4c
    background: rgb(249, 248, 247)
    line-height: 1.6
    border: 1px solid #ddd
body 
    font-size: 15px
.posts-expand .post-body ul, ol
    padding-left: 2em;
    padding: 10px 20px 10px 30px;
    color: #7d8688;
.posts-expand .post-body ul li
    list-style: disc
blockquote
    margin: 25px 0 !important
    background-color: #f5f8fc
    padding: 1rem
    color: #8796A8
    border-left: none
blockquote p:last-child
    margin-bottom: 0
.posts-expand .post-body h2, h3 
    border-bottom: 1px solid #eee
code 
    background: rgba(90, 87, 87, 0)
    margin: 5px
    color: #858080;
    border-radius: 4px
    background-color: #f9fafa
    border: 1px solid #e4e4e4
    max-width: 740px
    overflow-x: auto
    font-size: .9em
    padding: 1px 2px 1px
.sidebar-nav .sidebar-nav-active
    border-bottom: none
.post-toc .nav .active-current > a     
    border-bottom: none
.post-toc ol a
    border-bottom: none
.posts-expand .post-body a 
    color: #05a1a2
    text-decoration: none
    border: none
    word-wrap: break-word
.posts-expand .post-body a:hover
    color: #fc6423
.posts-expand .post-body img 
    border: 1px solid #ddd
    box-shadow: 0 0 30px #ccc
    -moz-box-shadow: 0 0 30px #ccc
    -webkit-box-shadow: 0 0 30px #ccc
    margin-bottom: 30px
    margin-top: 10px
.posts-expand .post-meta    
    color: #999;
    font-size: 14px
.posts-expand .post-meta a 
    color: #22ddde
.menu .menu-item a 
    font-size: 14px;
    line-height: 1.6
@media (min-width: 1600px) 
    .container .header-inner 
        width: 280px

.posts-collapse .collection-title
    padding-left: 20px
.zjp-home h3
    margin-bottom: 5px
    margin-top: 40px
    border: none
.zjp-home table
    margin: 0 0 20px 0
.zjp-home-h1 
    line-height: 50px
    text-align: center
    margin-bottom: 30px
.footer
    font-size: 12px
    color: #999
    border-top: 1px solid #d3d3d3
.footer-inner
    width: 1100px;
    text-align: left;


    
